{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2021",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowJs": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",

        "typeRoots": [
            "./src/lib/ambient_types",
            "node_modules/@types"
        ],

        "outDir": "dist",

        "paths": {
            "@charts/*": ["components/Chart/*"],
            "@renderers/*": ["components/TextRenderer/*"],
            "@table/*": ["components/Table/*"],
            "@components/*": ["components/*"],
            "@mui-wrappers/*": [".components/mui-wrappers/*"],
            "@lib/*": ["lib/*"],
            "@utils/*": ["utils/*"],
            "@common/*": ["common/*"]
        },
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "webpack",
        "example",
        "postcss.config.js"
    ],
}